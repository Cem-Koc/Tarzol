@model MonthlySalesModel

    <div class="col-lg-3">
        <div class="ibox ">
            <div class="ibox-title">
                <span class="label label-success float-right">Aylık</span>
                <h5>Satış Tutarı</h5>
            </div>
            <div class="ibox-content">
                <h1 class="no-margins">@Model.OrderTotalPrice.ToString("0.00") ₺</h1>
                <div class="stat-percent font-bold text-success">@Model.OrderTotalCount</div>
                <small>Satılan Ürün Adeti</small>
            </div>
        </div>
    </div>