@model List<Order>
@{
    ViewData["Title"] = "OrderPassive";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Teslimatı Tamamlanan Siparişler</h2>
    </div>
    <div class="col-lg-2">

    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight ecommerce">
    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-content">

                    <table class="footable table table-stripped toggle-arrow-tiny" data-page-size="15">
                        <thead>
                            <tr>

                                <th>Sipariş No</th>
                                <th data-hide="phone">Müşteri</th>
                                <th data-hide="phone">Sipariş Tarihi</th>
                                <th data-hide="phone">Tahmini Teslimat</th>
                                <th data-hide="phone,tablet">Teslimat Tarihi</th>
                                <th data-hide="phone">Durumu</th>
                                <th class="text-right">Aksiyon</th>

                            </tr>
                        </thead>
                        <tbody>

                            @foreach (var order in Model)
                            {
                                <tr>
                                    <td>
                                        @order.OrderNumber
                                    </td>
                                    <td>
                                        @order.Customer.CustomerFirstName&nbsp;@order.Customer.CustomerLastName
                                    </td>
                                    <td>
                                        @order.OrderDate
                                    </td>
                                    <td>
                                        @order.EstimatedDelivreyDate
                                    </td>
                                    <td>
                                        @order.DelivreyDate
                                    </td>
                                    @if (order.DelivreyDate == null)
                                    {
                                        <td>
                                            <span class="label label-warning">Devam Ediyor</span>
                                        </td>
                                    }
                                    else
                                    {
                                        <td>
                                            <span class="label label-primary">Teslim Edildi</span>
                                        </td>
                                    }
                                    <td class="text-right">
                                        <div class="btn-group">
                                            <a asp-action="OrderDetail" asp-route-orderId="@order.ID" class="btn-white btn btn-xs">Detaylar</a>

                                        </div>
                                    </td>
                                </tr>
                            }



                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="7">
                                    <ul class="pagination float-right"></ul>
                                </td>
                            </tr>
                        </tfoot>
                    </table>

                </div>
            </div>
        </div>
    </div>


</div>