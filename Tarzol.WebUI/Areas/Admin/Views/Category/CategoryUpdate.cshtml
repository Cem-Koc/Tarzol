@model Category
@{
    ViewData["Title"] = "CategoryUpdate";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<h1>Kategori Güncelle</h1>
<br />
<form asp-action="CategoryUpdate" method="post">
    <input type="hidden" value="@Model.ID" asp-for="ID" />
   

    <div class="form-group">
        <label>Kategori Adı</label><br />
        <input type="text" class="form-control" asp-for="CategoryName" value="@Model.CategoryName"/>
    </div>
    <div class="form-group">
        <label>Kategori Açıklaması</label><br />
        <textarea rows="7" class="form-control" asp-for="Description" >@Model.Description</textarea>
    </div>
    <div class="form-group">
        <button class="btn btn-success" style="float:right;width:180px;">Güncelle</button>
    </div>
</form>