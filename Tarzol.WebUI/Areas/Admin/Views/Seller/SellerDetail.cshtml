@model Seller
@{
    ViewData["Title"] = "SellerDetail";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row">
    <div class="col-lg-12">
        <div class="ibox ">
            <div class="ibox-title">
                <h5>@Model.CompanyName <small>Satıcıya ait tüm bilgiler.</small></h5>
                <div class="ibox-tools">
                   <span>Kayıt Tarihi: </span> @Model.CreatedDate
                </div>
            </div>
            <div class="ibox-content">
                <form method="get">
                    <div class="form-group row">
                        <label class="col-lg-2 col-form-label">İsim</label>

                        <div class="col-lg-10"><p class="form-control-static">@Model.CompanyName</p></div>
                    </div>
                    <div class="hr-line-dashed"></div>
                    <div class="form-group row">
                        <label class="col-lg-2 col-form-label">Vergi Numarası</label>

                        <div class="col-lg-10"><p class="form-control-static">@Model.TaxNumber</p></div>
                    </div>
                    <div class="hr-line-dashed"></div>
                    <div class="form-group row">
                        <label class="col-lg-2 col-form-label">Adres</label>

                        <div class="col-lg-10"><p class="form-control-static">@Model.SellerAddress</p></div>
                    </div>
                    <div class="hr-line-dashed"></div>
                    <div class="form-group row">
                        <label class="col-lg-2 col-form-label">İl</label>

                        <div class="col-lg-10"><p class="form-control-static">@ViewBag.sellerCity</p></div>
                    </div>
                    <div class="hr-line-dashed"></div>
                    <div class="form-group row">
                        <label class="col-lg-2 col-form-label">İlçe</label>

                        <div class="col-lg-10"><p class="form-control-static">@ViewBag.sellerDistrict</p></div>
                    </div>
                    <div class="hr-line-dashed"></div>
                    <div class="form-group row">
                        <div class="col-sm-4 col-sm-offset-2">
                            <a class="btn btn-white btn-sm" asp-action="Index" asp-controller="Notification">Bildirimlere Dön</a>
                            <a class="btn btn-primary btn-sm" asp-action="Approval" asp-controller="Seller" asp-route-sellerId="@Model.ID">Satıcıyı Onayla</a>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</div>

