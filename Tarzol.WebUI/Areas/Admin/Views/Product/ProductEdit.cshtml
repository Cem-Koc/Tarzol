@model Product
@{
    ViewData["Title"] = "ProductEdit";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Ürün Düzenle</h2>
    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight ecommerce">
    <form asp-action="ProductEdit" method="post">
        <input type="hidden" value="@Model.CreatedDate" asp-for="CreatedDate" />
        <input type="hidden" value="@Model.CreatedBy" asp-for="CreatedBy"/>
        <input type="hidden" value="@Model.Status" asp-for="Status"/>
        <input type="hidden" value="@Model.CargoID" asp-for="CargoID"/>
        <input type="hidden" value="@Model.CategoryID" asp-for="CategoryID"/>
        <input type="hidden" value="@Model.SubCategoryID" asp-for="SubCategoryID"/>
        <input type="hidden" value="@Model.SellerID" asp-for="SellerID"/>
        <input type="hidden" value="@Model.ID" asp-for="ID"/>
        <input type="hidden" value="@Model.ImageOne" asp-for="ImageOne"/>
        <input type="hidden" value="@Model.ImageTwo" asp-for="ImageTwo"/>
        <input type="hidden" value="@Model.ImageThree" asp-for="ImageThree"/>
        <input type="hidden" value="@Model.ImageFour" asp-for="ImageFour"/>
        
        <div class="row">
            <div class="col-lg-12">

                <div class="tabs-container">
                    <ul class="nav nav-tabs">
                        <li><a class="nav-link active" data-toggle="tab" href="#tab-1">Ürün Bilgileri</a></li>
                        <li><a class="nav-link" data-toggle="tab" href="#tab-4"> Resimler</a></li>
                    </ul>
                    <div class="tab-content">
                        <div id="tab-1" class="tab-pane active">
                            <div class="panel-body">

                                <fieldset>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Ürün İsmi:</label>
                                        <div class="col-sm-10"><input type="text" asp-for="@Model.ProductName" class="form-control" value="@Model.ProductName"></div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Satış Fiyatı:</label>
                                        <div class="col-sm-10"><input type="text" asp-for="@Model.DiscountedPrice" class="form-control" value="@Model.DiscountedPrice"></div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Ürün Piyasa Fiyatı:</label>
                                        <div class="col-sm-10"><input type="text" asp-for="@Model.MarketPrice" class="form-control" value="@Model.MarketPrice"></div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Ürün Kodu:</label>
                                        <div class="col-sm-10"><input type="text" asp-for="@Model.ProductCode" class="form-control" value="@Model.ProductCode"></div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Stok Sayısı:</label>
                                        <div class="col-sm-10"><input type="number" asp-for="@Model.UnitsInStock" class="form-control" value="@Model.UnitsInStock"></div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Marka:</label>
                                        <div class="col-sm-10"><input type="text" asp-for="@Model.TradeMark" class="form-control" value="@Model.TradeMark"></div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Açıklama:</label>
                                        <div class="col-sm-10">
                                            <textarea type="text" asp-for="@Model.Description" class="form-control" rows="3">@Model.Description</textarea>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Ürün Bilgileri:</label>
                                        <div class="col-sm-10">
                                            <textarea type="text" asp-for="@Model.ProductInformation" class="form-control" rows="5">@Model.ProductInformation</textarea>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Renk:</label>
                                        <div class="col-sm-10">
                                            <select class="form-control" asp-items="@ViewBag.Color" asp-for="ProductColorID">
                                                <option value="@Model.ProductColorID"></option>
                                            </select>
                                        </div>
                                    </div>
                                    <div class="form-group row">
                                        <label class="col-sm-2 col-form-label">Beden:</label>
                                        <div class="col-sm-10">
                                            <select class="form-control" asp-items="@ViewBag.Size" asp-for="ProductSizeID">
                                                <option value="@Model.ProductSizeID"></option>
                                            </select>
                                        </div>
                                    </div>

                                </fieldset>

                            </div>
                        </div>

                        <div id="tab-4" class="tab-pane">
                            <div class="panel-body">

                                <div class="table-responsive">
                                    <table class="table table-bordered table-stripped">
                                        <thead>
                                            <tr>
                                                <th>
                                                    Resin
                                                </th>
                                                <th>
                                                    Resim Yolu
                                                </th>
                                                <th>
                                                    Sıralama Düzeni
                                                </th>
                                                <th>
                                                    Sil
                                                </th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            <tr>
                                                <td>
                                                    <img src="/ProductImage/Big/@Model.ImageOne" style="width:100px; height:145px;">
                                                </td>
                                                <td>
                                                    <input type="text" class="form-control" disabled value="@Model.ImageOne" asp-for="ImageOne">
                                                </td>
                                                <td>
                                                    <input type="text" class="form-control" value="1">
                                                </td>
                                                <td>
                                                    <button class="btn btn-white"><i class="fa fa-trash"></i> </button>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    <img src="/ProductImage/Big/@Model.ImageTwo" style="width:100px; height:145px;">
                                                </td>
                                                <td>
                                                    <input type="text" class="form-control" disabled value="@Model.ImageTwo" asp-for="ImageTwo">
                                                </td>
                                                <td>
                                                    <input type="text" class="form-control" value="2">
                                                </td>
                                                <td>
                                                    <button class="btn btn-white"><i class="fa fa-trash"></i> </button>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    <img src="/ProductImage/Big/@Model.ImageThree" style="width:100px; height:145px;">
                                                </td>
                                                <td>
                                                    <input type="text" class="form-control" disabled value="@Model.ImageThree" asp-for="ImageThree">
                                                </td>
                                                <td>
                                                    <input type="text" class="form-control" value="3">
                                                </td>
                                                <td>
                                                    <button class="btn btn-white"><i class="fa fa-trash"></i> </button>
                                                </td>
                                            </tr>
                                            <tr>
                                                <td>
                                                    <img src="/ProductImage/Big/@Model.ImageFour" style="width:100px; height:145px;">
                                                </td>
                                                <td>
                                                    <input type="text" class="form-control" disabled value="@Model.ImageFour" asp-for="ImageFour">
                                                </td>
                                                <td>
                                                    <input type="text" class="form-control" value="4">
                                                </td>
                                                <td>
                                                    <button class="btn btn-white"><i class="fa fa-trash"></i> </button>
                                                </td>
                                            </tr>

                                        </tbody>
                                    </table>
                                </div>

                            </div>
                        </div>
                    </div>
                </div>

            </div>
        </div>
        <button class="btn btn-primary">Düzenle</button>
    </form>
</div>



