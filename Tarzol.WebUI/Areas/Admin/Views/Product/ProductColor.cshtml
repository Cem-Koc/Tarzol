@model ColorListAndNewColorModel
@{
    ViewData["Title"] = "ProductColor";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Ürün Renkleri</h2>
    </div>
    <div class="col-lg-2">

    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight ecommerce">


    <div class="ibox-content m-b-sm border-bottom">
       
        <form method="post" asp-action="ProductColor">

            <div class="row">
                <div class="col-lg-6">
                    <label class="col-form-label" for="product_name">Yeni Ürün Rengi Ekle</label>
                    <input type="text" asp-for="@Model.ProductColor" id="Color" name="Color" value="" placeholder="Renk" class="form-control">
                </div>
            
                <div class="col-lg-2">
                    <div style="width:120px;height:34px;"></div>
                    <button class="btn btn-primary">Renk Ekle</button>
                </div>
            </div>
        </form>
        

    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-content">

                    <table class="footable table table-stripped toggle-arrow-tiny" data-page-size="15">
                        <thead>
                            <tr>

                                <th data-toggle="true">Ürün Rengi</th>
                                <th data-hide="phone">Oluşturan</th>
                                <th data-hide="phone">Oluşturma Tarihi</th>
                                <th data-hide="phone">Değiştiren</th>
                                <th data-hide="phone">Değiştirilme Tarihi</th>
                                <th class="text-right" style="padding-right:25px;" data-sort-ignore="true">Aktiyon</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var color in Model.ProductColors)
                            {
                                <tr>
                                    
                                    <td style="padding-left:25px;">
                                        @color.Color
                                    </td>
                                    <td>
                                        @color.CreatedBy
                                    </td>
                                    <td>
                                        @color.CreatedDate
                                    </td>
                                    <td>
                                        @color.ModifiedBy
                                    </td>
                                    <td>
                                        @color.ModifiedDate
                                    </td>
                                    <td class="text-right">
                                        <div class="btn-group">
                                            <a asp-action="ProductColorDelete" asp-route-productColorId="@color.ID" style="width:80px;" class="btn-danger btn btn-xs">Sil</a>
                                        </div>
                                    </td>
                                </tr>
                            }



                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="6">
                                    <ul class="pagination float-right"></ul>
                                </td>
                            </tr>
                        </tfoot>
                    </table>

                </div>
            </div>
        </div>
    </div>


</div>


       



