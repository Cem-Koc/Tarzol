@model SizeListAndNewSizeModel
@{
    ViewData["Title"] = "ProductSize";
    Layout = "~/Areas/Admin/Views/Shared/_AdminLayout.cshtml";
}

<div class="row wrapper border-bottom white-bg page-heading">
    <div class="col-lg-10">
        <h2>Ürün Bedenleri</h2>
    </div>
    <div class="col-lg-2">

    </div>
</div>

<div class="wrapper wrapper-content animated fadeInRight ecommerce">


    <div class="ibox-content m-b-sm border-bottom">

        <form method="post" asp-action="ProductSize">

            <div class="row">
                <div class="col-lg-6">
                    <label class="col-form-label" for="product_name">Yeni Ürün Rengi Ekle</label>
                    <input type="text" asp-for="@Model.ProductSize" id="Size" name="Size" value="" placeholder="Beden" class="form-control">
                </div>

                <div class="col-lg-2">
                    <div style="width:120px;height:34px;"></div>
                    <button class="btn btn-primary">Beden Ekle</button>
                </div>
            </div>
        </form>


    </div>

    <div class="row">
        <div class="col-lg-12">
            <div class="ibox">
                <div class="ibox-content">

                    <table class="footable table table-stripped toggle-arrow-tiny" data-page-size="15">
                        <thead>
                            <tr>

                                <th data-toggle="true">Ürün Bedeni</th>
                                <th data-hide="phone">Oluşturan</th>
                                <th data-hide="phone">Oluşturma Tarihi</th>
                                <th data-hide="phone">Değiştiren</th>
                                <th data-hide="phone">Değiştirilme Tarihi</th>
                                <th class="text-right" style="padding-right:25px;" data-sort-ignore="true">Aktiyon</th>

                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var size in Model.ProductSizes)
                            {
                                <tr>

                                    <td style="padding-left:25px;">
                                        @size.Size
                                    </td>
                                    <td>
                                        @size.CreatedBy
                                    </td>
                                    <td>
                                        @size.CreatedDate
                                    </td>
                                    <td>
                                        @size.ModifiedBy
                                    </td>
                                    <td>
                                        @size.ModifiedDate
                                    </td>
                                    <td class="text-right">
                                        <div class="btn-group">
                                            <a asp-action="ProductSizeDelete" asp-route-productSizeId="@size.ID" style="width:80px;" class="btn-danger btn btn-xs">Sil</a>
                                        </div>
                                    </td>
                                </tr>
                            }



                        </tbody>
                        <tfoot>
                            <tr>
                                <td colspan="6">
                                    <ul class="pagination float-right"></ul>
                                </td>
                            </tr>
                        </tfoot>
                    </table>

                </div>
            </div>
        </div>
    </div>


</div>

