
<div class="pre-header">
    <div class="container">
        <div class="row">
            <!-- BEGIN TOP BAR LEFT PART -->


            @if (User.Identity.IsAuthenticated && User.IsInRole("Seller"))
            {
                <div class="col-md-6 col-sm-6 additional-shop-info">
                    <ul class="list-unstyled list-inline">
                        <li><i class="fa fa-phone"></i><span>444 0 123</span></li>
                        
                    </ul>
                </div>
                <div class="col-md-6 col-sm-6 additional-nav">
                    <ul class="list-unstyled list-inline pull-right">
                        <li><a asp-action="Index" asp-controller="Seller" asp-route-userName="@User.Identity.Name">Satıcı Paneli</a></li>
                        <li><a asp-action="Notifications" asp-controller="Seller" asp-route-userName="@User.Identity.Name"><i class="fa fa-bell"></i></a></li>
                        <li><a asp-action="Messages" asp-controller="Seller" asp-route-userName="@User.Identity.Name"><i class="fa fa-envelope"></i></a></li>
                        <li><a href="/Login/Logout/">Çıkış Yap</a></li>
                    </ul>
                </div>
            }
            else if (User.Identity.IsAuthenticated && User.IsInRole("User"))
            {
                <div class="col-md-6 col-sm-6 additional-shop-info">
                    <ul class="list-unstyled list-inline">
                        <li><i class="fa fa-phone"></i><span>444 0 123</span></li>
                        <li><a href="/Seller/SellerAppRegister/">Tarzol'da Satış Yap </a></li>
                    </ul>
                </div>
                <div class="col-md-6 col-sm-6 additional-nav">
                    <ul class="list-unstyled list-inline pull-right">
                        <li><a href="/Order/Index/">Siparişlerim</a></li>
                        <li><a href="/Favorite/Index/">Favorilerim</a></li>
                        <li><a href="">@User.Identity.Name</a></li>
                        <li><a href="/Login/Logout/">Çıkış Yap</a></li>
                    </ul>
                </div>
            }
            else
            {
                <div class="col-md-6 col-sm-6 additional-shop-info">
                    <ul class="list-unstyled list-inline">
                        <li><i class="fa fa-phone"></i><span>444 0 123</span></li>
                        <li><a href="/Seller/SellerAppRegister/">Tarzol'da Satış Yap </a></li>
                    </ul>
                </div>
                <div class="col-md-6 col-sm-6 additional-nav">
                    <ul class="list-unstyled list-inline pull-right">
                        @*<li><a href="#">Favorilerim</a></li>*@
                        <li><a href="/Login/Index/">Giriş Yap</a></li>
                        <li><a href="/RegisterUser/Index/">Kayıt Ol</a></li>
                    </ul>
                </div>
            }


            <!-- END TOP BAR MENU -->
        </div>
    </div>
</div>